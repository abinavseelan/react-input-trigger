{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es6",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "rootDir": "src"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build", "src/**/*.test.*"]
}
